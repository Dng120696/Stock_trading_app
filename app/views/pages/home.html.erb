
<% if current_user %>
    <%= link_to 'Dashboard',trader_dashboard_index_path %>
    <% elsif current_admin_user %>
    <%= link_to 'Dashboard',admin_dashboard_index_path %>
      <% end %>

<div class = 'mb-4'>
  <h1 class="font-bold text-4xl">Pages#home</h1>
  <p class = 'text-red-500'>Find me in app/views/pages/home.html.erb</p>

</div>

<% if !user_signed_in? && !admin_user_signed_in?%>
  <%= link_to 'User Sign In', new_user_session_path, class: 'p-2 border-[1px] '%>
  <%= link_to 'Admin Sign In', new_admin_user_session_path, class: 'p-2 border-[1px] '%>
<%else%>
    <% if current_user %>
      <li><%= link_to "Logout", destroy_user_session_path, data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></li>
    <% elsif current_admin_user %>
      <li><%= link_to "Logout", destroy_admin_user_session_path, data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></li>
      <% end %>

<%end%>
