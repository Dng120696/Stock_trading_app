<div class = 'w-[clamp(300px,90%,500px)] mx-auto p-8 rounded-sm  shadow-[0_0_10px_rgba(0,0,0,0.15)] dark:shadow-[0_0_10px_rgba(0,0,0,0.55)] dark:bg-gray-700'>
  <h1 class = 'text-2xl dark:text-gray-100 mb-4 text-center font-semibold'>
    Change Password
  </h1>
  <%= form_with url: change_password_trader_profiles_path, method: :patch do |f| %>
    <div class = 'mb-4'>
      <%= f.label :email ,class: 'text-sm font-semibold mb-2 text-gray-700 dark:text-gray-300' %><br />
      <%= f.text_field :email, value: current_user.email, readonly: true, class: 'w-full  text-gray-400 border-gray-300 rounded-sm dark:bg-gray-600 dark:border-gray-700   dark:text-gray-300'%>
    </div>
    <div class = 'mb-4'>
      <%= f.label :old_password , class: 'font-semibold   text-sm text-gray-700 dark:text-gray-300 block' %>
      <%= f.password_field :old_password, placeholder:'Enter your Old Password',class: 'w-full placeholder-shown:border-gray-400 text-base bg-gray-50 dark:bg-gray-200 dark:placeholder-shown:border-gray-700 rounded-sm '%>
    </div>
    <div class = 'mb-4'>
      <%= f.label :new_password, class: 'font-semibold   text-sm text-gray-700 dark:text-gray-300 block' %>
      <%= f.password_field :new_password, placeholder:'Enter your New Password' ,class: 'w-full placeholder-shown:border-gray-400 text-base bg-gray-50 dark:bg-gray-200 dark:placeholder-shown:border-gray-700 rounded-sm ' %>
    </div>
    <div class = 'mb-4'>
      <%= f.label :password_confirmation, class: 'font-semibold   text-sm text-gray-700 dark:text-gray-300 block' %>
      <%= f.password_field :password_confirmation, placeholder:'Confirm your Password',class: 'w-full placeholder-shown:border-gray-400 text-base  dark:bg-gray-200 dark:placeholder-shown:border-gray-700 rounded-sm '%>
    </div>
    <%= f.submit 'Update' ,class: ' w-full h-full rounded-sm font-semibold bg-blue-600 dark:bg-blue-700 text-gray-100 py-2'%>
  <%end%>
</div>
