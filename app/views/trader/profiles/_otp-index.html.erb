<div class = 'w-[clamp(300px,90%,500px)] mx-auto p-8 rounded-sm  shadow-[0_0_10px_rgba(0,0,0,0.15)] dark:shadow-[0_0_10px_rgba(0,0,0,0.55)] dark:bg-gray-700'>
  <h1 class = 'text-2xl dark:text-gray-100 mb-4 text-center  font-semibold'>Confirm OTP</h1>
  <%= form_with url: process_otp_confirmation_trader_profiles_path, method: :post ,class: 'flex flex-col  gap-2' do |f| %>
    <%= f.label 'Enter OTP', class: 'font-semibold   text-sm text-gray-600 dark:text-gray-300' %>
    <div class = 'grid grid-cols-[2fr,1fr] gap-4 '>
      <%= f.text_field :otp , placeholder: 'Enter OTP',autofocus: true,class: 'placeholder-shown:border-gray-400 text-base bg-gray-50 dark:bg-gray-200 dark:placeholder-shown:border-gray-700 rounded-sm '%>
      <%= f.submit "Confirm" ,class: 'w-full h-full rounded-sm font-semibold bg-blue-600 dark:bg-blue-600 text-gray-100 '%>
    <% end %>
    <div class = 'flex gap-4'>
      <span class = 'text-sm font-semibold  text-gray-600 dark:text-gray-200'>Didn't receive OTP?</span> <%= button_to 'Resend OTP', resend_otp_trader_profiles_path, method: :post ,class: 'font-semibold   text-sm underline text-gray-600 dark:text-gray-200' %>
    </div>
  </div>
</div>
