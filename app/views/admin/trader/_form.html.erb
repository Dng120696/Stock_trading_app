
<div class="p-6 bg-white shadow-md rounded-md mx-auto" style="max-width: 400px;">
  <%= form_for(@trader, url: new_admin_trader_path, data: { turbo: false }) do |f| %>
    <%= render 'shared/error_messages', object: @trader %>
    <div class="mb-4">
      <%= f.label :firstname, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :firstname, class: "w-full rounded border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div class="mb-4">
      <%= f.label :lastname, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :lastname, class: "w-full rounded border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, class: "w-full rounded border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autocomplete: "email" %>
    </div>

    <% if @trader.new_record? %>
      <div class="text-center">
        <%= f.submit "Create Trader", class: "bg-blue-500 hover:bg-blue-600 text-black font-bold py-2 px-4 rounded" %>
      </div>
    <% else %>
      <div class="text-center">
        <%= f.submit "Update Trader", class: "bg-blue-500 hover:bg-blue-600 text-black font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  <% end %>
</div>
